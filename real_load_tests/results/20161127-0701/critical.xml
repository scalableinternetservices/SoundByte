<?xml version="1.0"?><tsung loglevel="notice" dumptraffic="protocol" version="1.0">

  <clients>
    <client host="localhost" use_controller_vm="true" maxusers="15000"/>
  </clients>

  <servers>
    <server host="SoundByte-h-m3-xl-4-334026926.us-west-2.elb.amazonaws.com" port="80" type="tcp"/>
    </servers>

  <load>
    <arrivalphase phase="1" duration="30" unit="second">
      <users arrivalrate="1" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="2" duration="30" unit="second">
      <users arrivalrate="2" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="3" duration="30" unit="second">
      <users arrivalrate="4" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="4" duration="30" unit="second">
      <users arrivalrate="8" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="5" duration="30" unit="second">
      <users arrivalrate="16" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="6" duration="30" unit="second">
      <users arrivalrate="32" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="7" duration="30" unit="second">
      <users arrivalrate="64" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="8" duration="30" unit="second">
      <users arrivalrate="128" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="9" duration="30" unit="second">
      <users arrivalrate="256" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="10" duration="30" unit="second">
      <users arrivalrate="512" unit="second"/>
    </arrivalphase>
  </load>

  <options>
    <option name="global_ack_timeout" value="2000"/>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>

    </options>

  <sessions>
    <session name="critical" probability="100" type="ts_http">
      <setdynvars sourcetype="random_number" start="1" end="100000">
        <var name="current_user_id"/>
      </setdynvars>

      <request>
        <http url="/" version="1.1" method="GET"/>
      </request>
      <thinktime value="2" random="true"/>

      <request>
        <dyn_variable name="authenticity_token"/> 
        <http url="/users/sign_up" version="1.1" method="GET"/>
      </request>
      <thinktime value="2" random="true"/>

      <if var="authenticity_token" neq="">
        <request subst="true">
          <http url="/users/" method="POST" version="1.1" content_type="application/x-www-form-urlencoded" contents="utf8=%E2%9C%93&amp;authenticity_token=%%_authenticity_token%%&amp;user%5Bemail%5D=user_%%_current_user_id%%%40test.com&amp;user%5Bpassword%5D=88888888&amp;user%5Bpassword_confirmation%5D=88888888&amp;commit=Create+Account"/>
        </request>
        <thinktime value="2" random="true"/>

        <for from="1" to="10" incr="1" var="counter">
          <request>
            <http url="/sound_bytes/new" version="1.1" method="GET"/>
          </request>
          <thinktime value="2" random="true"/>

          <setdynvars sourcetype="eval" code="fun({Pid,DynVars})-> [[13, 10]] end.">
            <var name="nl"/>
          </setdynvars>

          <setdynvars sourcetype="eval" code="fun({Pid,DynVars})->                       {ok, Bin} = file:read_file(&quot;levelup.mp3&quot;),                       Bin                       end.">
            <var name="attached_file"/>
          </setdynvars>

          <setdynvars sourcetype="random_number" start="1000" end="9999999">
            <var name="random_tag_name"/>
          </setdynvars>
    
          <request subst="true">
            <http url="/sound_bytes" version="1.1" method="POST" content_type="multipart/form-data; boundary=----FormBoundary" contents="------FormBoundary%%_nl%%Content-Disposition: form-data; name=&quot;authenticity_token&quot;%%_nl%%%%_nl%%%%_authenticity_token%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name=&quot;sound_byte[mpeg]&quot;; filename=&quot;levelup.mp3&quot;%%_nl%%Content-Type: audio/mp3%%_nl%%%%_nl%%%%_attached_file%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name=&quot;sound_byte[tag]&quot;%%_nl%%%%_nl%%%%_random_tag_name%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name=&quot;commit&quot;%%_nl%%%%_nl%%Upload%%_nl%%------FormBoundary--">
            </http>
          </request>
        </for>


        <request>
          <http url="/users/sign_out" version="1.1" method="POST" contents="_method=delete">
          </http>
        </request>
      </if>
    </session>
  </sessions>
</tsung>
