<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.0">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="ec2-52-24-113-149.us-west-2.compute.amazonaws.com" port="80" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="10" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="glocal_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">
      
      <request>
        <dyn_variable name="authenticity_token" ></dyn_variable> 
        <http url="/sound_bytes/new" version="1.1" method="GET"></http>
      </request>
        
      <thinktime value="2" random="true"></thinktime>
      
      <if var="authenticity_token" neq="">
        
        <setdynvars sourcetype="eval"
              code='fun({Pid,DynVars})-> [[13, 10]] end.'>
          <var name="nl" />
        </setdynvars>
  
        <setdynvars sourcetype="eval"
              code='fun({Pid,DynVars})->
                      {ok, Bin} = file:read_file("levelup.mp3"),
                      Bin
                    end.'>
          <var name="attached_file" />
        </setdynvars>
  
        <setdynvars sourcetype="random_number" start="1000" end="9999999">
          <var name="random_submission_name" />
        </setdynvars>
        
        <setdynvars sourcetype="random_number" start="1000" end="9999999">
          <var name="random_tag_name" />
        </setdynvars>
  
        <request subst="true">
          <http
            url='/sound_bytes'
            version='1.1'
            method='POST'
            content_type='multipart/form-data; boundary=----FormBoundary'
            contents='------FormBoundary%%_nl%%Content-Disposition: form-data; name="utf8"%%_nl%%%%_nl%%%E2%9C%93%%_nl%%-------FormBounday%%_nl%%Content-Disposition: form-data; name="authenticity_token"%%_nl%%%%_nl%%%%_authentication_token%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="sound_byte[mpeg]"; filename="%%_random_submission_name%%"%%_nl%%Content-Type: audio/mp3%%_nl%%%%_nl%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="sound_byte[tag]"%%_nl%%%%_nl%%%%_random_tag_name%%%%_nl%%FormBoundary%%_nl%%Content-Disposition: form-data; name="commit"%%_nl%%%%_nl%%Upload%%_nl%%------FormBoundary--
  '>
        </http>
        </request>
     </if>
    </session>
  </sessions>
</tsung>
