<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd">
<!-- <tsung loglevel="notice" version="1.0"> -->
<!-- dumptraffic="protocol" will dump the http traffic to a file tsung.dump -->
<tsung loglevel="notice" dumptraffic="protocol" version="1.0">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <!-- m3-medium -->
    <!--<server host="ec2-35-162-217-91.us-west-2.compute.amazonaws.com" port="80" type="tcp"></server>-->
    <!--  c3-large  -->
    <server host="ec2-35-164-73-147.us-west-2.compute.amazonaws.com" port="80" type="tcp"></server>
    <!--  r3-large  -->
    <!--<server host="ec2-35-164-29-55.us-west-2.compute.amazonaws.com" port="80" type="tcp"></server>-->
    <!-- horizontal m3-medium *2-->
    <!--<server host="Soundbyte-h-m3-m-2-571749252.us-west-2.elb.amazonaws.com" port="80" type="tcp"></server>-->
    <!-- horizontal m3-medium *4-->
    <!--<server host="SoundByte-h-m3-m-4-122781054.us-west-2.elb.amazonaws.com" port="80" type="tcp"></server>-->
  </servers>

  <load>
    <arrivalphase phase="1" duration="30" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="2" duration="30" unit="second">
      <users arrivalrate="2" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="3" duration="30" unit="second">
      <users arrivalrate="4" unit="second"></users>
    </arrivalphase>

  <!--
   <arrivalphase phase="4" duration="30" unit="second">
     <users arrivalrate="8" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="5" duration="30" unit="second">
     <users arrivalrate="16" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="6" duration="30" unit="second">
     <users arrivalrate="32" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="7" duration="30" unit="second">
     <users arrivalrate="64" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="8" duration="30" unit="second">
     <users arrivalrate="128" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="9" duration="30" unit="second">
     <users arrivalrate="256" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="10" duration="30" unit="second">
     <users arrivalrate="512" unit="second"></users>
   </arrivalphase>
   -->
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>

    <!-- The lorem_words.csv file contains a list of lorem words -->
    <!-- The words are used for generating search keywords -->
    <!-- <option name="file_server" id='lorem_words' value="./lorem_words.csv"></option> -->
  </options>

  <sessions>

    <session name="critical_2" probability="100" type="ts_http">
      <setdynvars sourcetype="random_number" start="1" end="100000">
        <var name="current_user_id" />
      </setdynvars>

      <!-- repeat step [1] 10 times -->
      <for from="1" to="10" incr="1" var="counter">

        <!-- 1. visit homepage -->
        <request>
          <http url='/' version='1.1' method='GET'></http>
        </request>

        <thinktime value="2" random="true"></thinktime>

        <!-- 2. login -->
        <!-- go to users/sign_in page -->
        <!-- [sample value] - authenticity_token: ... -->
        <request>
          <dyn_variable name="authenticity_token" ></dyn_variable> 
          <http url="/users/sign_up" version="1.1" method="GET"></http>
        </request>
  
        <thinktime value="2" random="true"></thinktime>
  
        <if var="authenticity_token" neq="">
          <!-- log in using username and password -->
          <!-- [sample value] - email: user_1 -->
          <!-- [sample value] - password: 88888888 -->
          <!-- [sample value] - authenticity_token: ... -->
          <!-- [sample value] - remember_me: 0 -->
          <request subst="true">
            <http url="/users/" method="POST" version="1.1" 
              content_type="application/x-www-form-urlencoded"
              contents="utf8=%E2%9C%93&amp;authenticity_token=%%_authenticity_token%%&amp;user%5Bemail%5D=user_%%_current_user_id%%%40test.com&amp;user%5Bpassword%5D=88888888&amp;user%5Bpassword_confirmation%5D=88888888&amp;commit=Create+Account"/>
          </request>
    
          <thinktime value="2" random="true"></thinktime>





          <!-- 3. upload -->
          <request>
            <dyn_variable name="authenticity_token" ></dyn_variable> 
            <http url="/sound_bytes/new" version="1.1" method="GET"></http>
          </request>

          <thinktime value="2" random="true"></thinktime>

          <setdynvars sourcetype="eval" code='fun({Pid,DynVars})-> [[13, 10]] end.'>
            <var name="nl" />
          </setdynvars>

          <setdynvars sourcetype="eval"
              code='fun({Pid,DynVars})->
                      {ok, Bin} = file:read_file("levelup.mp3"),
                      Bin
                      end.'>
          <var name="attached_file" />
          </setdynvars>

          <setdynvars sourcetype="random_number" start="1000" end="9999999">
          <var name="random_submission_name" />
          </setdynvars>
          
          <setdynvars sourcetype="random_number" start="1000" end="9999999">
          <var name="random_tag_name" />
          </setdynvars>

          <request subst="true">
          <http
              url='/sound_bytes'
              version='1.1'
              method='POST'
              content_type='multipart/form-data; boundary=----WebKitFormBoundary'
              contents='------WebKitFormBoundary%%_nl%%Content-Disposition: form-data; name="utf8"%%_nl%%%%_nl%%%E2%9C%93%%_nl%%------WebKitFormBoundary%%_nl%%Content-Disposition: form-data; name="authenticity_token"%%_nl%%%%_nl%%%%_authentication_token%%%%_nl%%------WebKitFormBoundary%%_nl%%Content-Disposition: form-data; name="sound_byte[mpeg]"; filename="%%_random_submission_name%%"%%_nl%%Content-Type: audio/mp3%%_nl%%%%_nl%%%%_nl%%------WebKitFormBoundary%%_nl%%Content-Disposition: form-data; name="sound_byte[tag]"%%_nl%%%%_nl%%%%_random_tag_name%%%%_nl%%FormBoundary%%_nl%%Content-Disposition: form-data; name="commit"%%_nl%%%%_nl%%Upload%%_nl%%------WebKitFormBoundary--
  '>
          </http>
          </request>
    








          <!-- 4. log out -->
          <request>
            <http 
                url='/users/sign_out' 
                version='1.1' 
                method='POST' 
                contents='_method=delete'>
            </http>
          </request>
        </if>
      </for>

    </session>

  </sessions>
</tsung>